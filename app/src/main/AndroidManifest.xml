<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.aroundforfun">
    <uses-permission android:name="android.permission.GET_TASKS" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivityCounter">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".VideoActivity"/>
        <activity android:name=".VideoViewActivity"/>
        <activity android:name=".SettingsActivity"/>
        <activity android:name=".SetPasswordActivity"/>
        <activity android:name=".SetAlarmSoundActivity"/>
        <activity android:name=".SetEndVideoActivity"/>
        <activity android:name=".SetProgramBackgroundActivity"/>
        <activity android:name=".SettingsActivityCounter"/>
        <activity android:name=".MainActivity"/>
        <activity android:name=".SetCounterActivity"/>
        <activity android:name=".SetCounterLimitActivity"/>


        <uses-permission android:name="android.permission.GET_TASKS" />

        <receiver android:name=".RemoteControlReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>
    </application>

</manifest>